<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Responsive Webpage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        @media (max-width: 768px) {
            .card {
                width: 100% !important;
            }
            .form-control {
                width: 100% !important;
            }
            .row div {
                text-align: center;
            }
        }
    </style>
    <script>
        function changeColor(button) {
            button.style.backgroundColor = button.style.backgroundColor === 'blue' ? 'green' : 'blue';
        }
        
        function showGreeting() {
            const hour = new Date().getHours();
            let greeting;
            if (hour < 12) {
                greeting = "Good morning!";
            } else if (hour < 18) {
                greeting = "Good afternoon!";
            } else {
                greeting = "Good evening!";
            }
            alert(greeting);
        }
        
        function calculateSum() {
            const num1 = parseFloat(document.getElementById('num1').value);
            const num2 = parseFloat(document.getElementById('num2').value);
            const sum = num1 + num2;
            document.getElementById('result').textContent = "Result: " + sum;
        }
    </script>
</head>
<body onload="showGreeting()">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">My Website</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <div class="container mt-4 text-center">
        <h1 class="display-4">Welcome to My Webpage</h1>
        <p class="lead">This is a simple webpage with a heading, paragraph, and an image.</p>
        <div class="card mx-auto" style="width: 18rem;">
            <img src="https://via.placeholder.com/300" class="card-img-top" alt="Placeholder Image">
            <div class="card-body">
                <p class="card-text">This is a responsive card component using Bootstrap.</p>
            </div>
        </div>
        
        <form class="mt-4">
            <input class="form-control w-50 mx-auto" type="text" placeholder="Enter your name">
            <button class="btn btn-primary mt-2" type="submit">Submit</button>
        </form>
        
        <button class="btn btn-info mt-3" onclick="changeColor(this)">Click Me</button>
        
        <h2 class="mt-4">Basic Calculator</h2>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <input class="form-control" type="number" id="num1" placeholder="Enter first number">
            </div>
            <div class="col-md-3">
                <input class="form-control" type="number" id="num2" placeholder="Enter second number">
            </div>
            <div class="col-md-2">
                <button class="btn btn-success" onclick="calculateSum()">Add</button>
            </div>
        </div>
        <p id="result" class="mt-2">Result: </p>
    </div>
    
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 col-12 bg-info p-3 text-white">Column 1</div>
            <div class="col-md-4 col-12 bg-warning p-3">Column 2</div>
            <div class="col-md-4 col-12 bg-danger p-3 text-white">Column 3</div>
        </div>
    </div>
</body>
